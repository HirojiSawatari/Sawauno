
<% if (is_home()) { %> 
<header id="head" class="panel-cover">
<% } else { %>
<header id="head" class="panel-cover panel-cover--collapsed">
<% } %>

<% if (is_post()) { %>
  <% if (page.title+'' == '求索路（一）') { %>
  <script type="text/javascript"> 
  document.getElementById("head").style.background="url(/images/background-cover1.jpg) bottom center no-repeat #666666";
  document.getElementById("head").style.backgroundSize="cover";
  </script> 
  <% } else if (page.title+'' == 'Android开发获取设备硬件相关信息') { %>
  <script type="text/javascript"> 
  document.getElementById("head").style.background="url(/images/background-cover2.jpg) center center no-repeat #666666";
  document.getElementById("head").style.backgroundSize="cover";
  </script> 
  <% } else if (page.title+'' == 'Scrapy爬虫 + Tkinter爬取天猫热门商品') { %>
  <script type="text/javascript"> 
  document.getElementById("head").style.background="url(/images/background-cover3.jpg) bottom center no-repeat #666666";
  document.getElementById("head").style.backgroundSize="cover";
  </script> 
  <% } else if (page.title+'' == '搭完blog后的一些闲话') { %>
  <script type="text/javascript"> 
  document.getElementById("head").style.background="url(/images/background-cover4.jpg) center center no-repeat #666666";
  document.getElementById("head").style.backgroundSize="cover";
  </script> 
  <% } else if (page.title+'' == '十三世纪上半叶蒙古高原气候变化特征与成因分析') { %>
  <script type="text/javascript"> 
  document.getElementById("head").style.background="url(/images/background-cover5.jpg) center center no-repeat #666666";
  document.getElementById("head").style.backgroundSize="cover";
  </script> 
  <% } else if (page.title+'' == '利用Hexo在GitHub上搭建个人博客') { %>
  <script type="text/javascript"> 
  document.getElementById("head").style.background="url(/images/background-cover6.jpg) center center no-repeat #666666";
  document.getElementById("head").style.backgroundSize="cover";
  </script> 
  <% } else if (page.title+'' == '个性化Huno主题') { %>
  <script type="text/javascript"> 
  document.getElementById("head").style.background="url(/images/background-cover7.jpg) center center no-repeat #666666";
  document.getElementById("head").style.backgroundSize="cover";
  </script> 

  <% } %>

<% } %>


  <div class="panel-main">

  
    <div class="panel-main__inner panel-inverted">
    <div class="panel-main__content">

        <% if (theme.logo) { %>
        <a href="/" title="link to homepage for <%= config.title %>"><img src="<%= theme.logo %>" width="80" alt="<%= config.title %> logo" class="panel-cover__logo logo" /></a>
        <% } %>

        <h1 class="panel-cover__title panel-title"><a href="/" title="link to homepage"><%= config.title %></a></h1>
        <hr class="panel-cover__divider" />

        <% if (config.subtitle) { %>
        <p class="panel-cover__description">
          <%= config.subtitle %>
        </p>
        <hr class="panel-cover__divider panel-cover__divider--secondary" />
        <% } %>

        <div class="navigation-wrapper">

          <nav class="cover-navigation cover-navigation--primary">
            <ul class="navigation">

              <% for (var i in theme.menu){ %>
                <%
                  if (theme.menu[i]+'' == '/#blog') {
                    nav_btn_class = 'blog-button';
                  } else {
                    nav_btn_class = '';
                  }
                %>
                <li class="navigation__item"><a href="<%- theme.menu[i] %>" title="" class="<%= nav_btn_class %>"><%= i %></a></li>
              <% } %>

            </ul>
          </nav>

          <%- partial('_partials/social') %>

        </div>

      </div>

    </div>

    <div class="panel-cover--overlay"></div>
  </div>
</header>